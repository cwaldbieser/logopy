<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>{{html_title|e}}</title>
    <style type="text/css">
    /* Style */
    #animation * {
      fill-opacity: 0;
      transition: fill-opacity 1s;
    }

    #animation.finished *:not(.hole):not(.no-fill) {
      fill-opacity: 1;
    }
    </style>
</head>
<body style='background-color:{{bgcolor}}'>
    <div id="animation" style="margin-left:auto;margin-right:auto;width:{{html_width}}"></div>
    <script src="./vivus.min.js"></script>
    <script>
        new Vivus('animation', {
            file: './logo.svg',
            duration: {{animation_duration}},
            type: '{{animation_type}}',
            start: '{{animation_start}}'
        },
        function (obj) {
            document.getElementById("animation").classList.add('finished');
        })
        ;
    </script>
</body>
</html>
